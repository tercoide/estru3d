Public editar As Boolean

Private Sub llenar_tabla()

    Dim a As Integer, b As Integer

    Try tblSecc.Clear

    tblSecc.Rows.Count = modEstru.secciones.Count  'para los titulos
    For Each sec As ClsSeccion In modestru.secciones 'a = 1 To modestru.secciones.count  ' la seccion 0 es de uso reservado
        Inc a
        tblSecc[a - 1, 0].Text = sec.handle
        tblSecc[a - 1, 1].Text = sec.nombre
        tblSecc[a - 1, 2].Text = sec.tipo
        tblSecc[a - 1, 3].Text = Format(sec.area, modestru.setting.formato_datos)
        tblSecc[a - 1, 4].Text = Format(sec.ip, modestru.setting.formato_datos)
        tblSecc[a - 1, 5].Text = Format(sec.iy, modestru.setting.formato_datos)
        tblSecc[a - 1, 6].Text = Format(sec.iz, modestru.setting.formato_datos)

    Next
    For a = 2 To tblSecc.Columns.Max

        For b = 0 To tblSecc.Rows.Max
            tblSecc[b, 1].Alignment = Align.Left
            tblSecc[b, 0].Alignment = Align.left
            tblSecc[b, a].Alignment = Align.Right
        Next
    Next

End Sub

