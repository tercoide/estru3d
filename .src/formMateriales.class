Public editar As Boolean

Private Sub llenar_tabla()
    
    Dim a As Integer, b As Integer
    
    For a = 0 To tblMats.Rows.Count - 1
        
        tblMats[a, 0].Text = Str$(a + 1)
        tblMats[a, 1].Text = modestru.material[a + 1].nombre
        tblMats[a, 2].Text = Format(modestru.material[a + 1].e * modestru.datos.unidades.factorEG, modestru.setting.formato_datos)
        tblMats[a, 3].Text = Format(modestru.material[a + 1].g * modestru.datos.unidades.factorEG, modestru.setting.formato_datos)
        tblMats[a, 4].Text = Format(modestru.material[a + 1].densidad * modestru.datos.unidades.factorden, modestru.setting.formato_datos)
        tblMats[a, 5].Text = Format(modestru.material[a + 1].fluencia * modestru.datos.unidades.factorEG, modestru.setting.formato_datos)
        
    Next
    For a = 2 To 5
        For b = 0 To 19
            tblMats[b, a].Alignment = Align.Right
        Next
    Next
    
End Sub

Private Sub leer_tabla()
    
    Dim a As Integer, b As Integer
    ' AQUI NO HAY TRANSFORMACION
    
    For a = 0 To tblMats.Rows.Count - 1
        
        modestru.material[a + 1].nombre = tblMats[a, 1].Text
        modestru.material[a + 1].e = Val(tblMats[a, 2].Text)
        modestru.material[a + 1].g = Val(tblMats[a, 3].Text)
        modestru.material[a + 1].densidad = Val(tblMats[a, 4].Text)
        modestru.material[a + 1].fluencia = Val(tblMats[a, 5].Text)
        
    Next
    
End Sub

Public Sub Form_Open()
    
    ' veo si esta eligiendo el modestru.material
    
    ' veo que paso con las unidades
    
    Dim lo As String, pe As String, sum As String, sum3 As String, al As Integer
    Dim ancho As Single, a As Integer
    
    tblMats.Columns.count = 6
    tblMats.Rows.count = 20
    tblMats.Header = 1
    
    fmain.debuginfo(("Abriendo Tabla de Materiales"))
    lo = modestru.datos.unidades.long_nombre
    
    pe = modestru.datos.unidades.peso_nombre
    
    sum = pe & "/" & lo & "2"
    sum3 = pe & "/" & lo & "3"
    ' calculo el factor
    
    tblMats.Columns[0].title = ("Nro")
    tblMats.Columns[1].title = ("  Nombre                        ")
    tblMats.Columns[2].title = ("  Modulo E ") & sum & "     "
    tblMats.Columns[3].title = ("  Modulo G ") & sum & "     "
    tblMats.Columns[4].title = ("  Densidad  ") & sum3 & "     "
    tblMats.Columns[5].title = ("  Fluencia ") & sum & "     "
    
    For al = 1 To 5
        tblMats.Columns[al].Alignment = 0   ' significa centro
    Next
    
End

